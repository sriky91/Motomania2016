<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:padding="5dp"
    android:layout_gravity="center_vertical"
    >
 
    <LinearLayout 
        android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center_horizontal"
		android:padding="10dp"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
			android:text="Notifiche"
			android:textSize="23sp"
			android:gravity="center"
			android:layout_gravity="center_vertical"
            />
        <ImageView
            android:id="@+id/iv_switch_notify"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:src="@drawable/switch_on_yellow"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_settings"
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:orientation="vertical" 
        >
	    <LinearLayout 
	        android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
	        >
	    <LinearLayout 
	        android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical"
	        >
			<CheckBox 
			    android:id="@+id/cb_motoGP"
			    android:layout_width="110dp"
			    android:layout_height="wrap_content"
			    android:layout_marginLeft="20dp"
			    android:textSize="19sp"
			    android:text="MotoGP"
			    android:button="@null"
				android:drawableRight="@drawable/check_box"
			    />
			<CheckBox 
			    android:id="@+id/cb_moto2"
			    android:layout_width="110dp"
			    android:layout_height="wrap_content"
			    android:layout_marginLeft="20dp"
			    android:textSize="19sp"
			    android:text="Moto2"
			    android:button="@null"
				android:drawableRight="@drawable/check_box"
			    />
			<CheckBox 
			    android:id="@+id/cb_moto3"
			    android:layout_width="110dp"
			    android:layout_height="wrap_content"
			    android:layout_marginLeft="20dp"
			    android:textSize="19sp"
			    android:text="Moto3"
			    android:button="@null"
				android:drawableRight="@drawable/check_box"
			    />
		</LinearLayout>
		<RadioGroup 
		    android:layout_width="120dp"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="20dp"
		    android:layout_marginTop="15dp"
		    >
		    <RadioButton 
		        android:id="@+id/rb_only_race"
		        android:text="@string/only_race"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:button="@null"
		        android:drawableRight="@drawable/radio_btn"
		        />
		    <RadioButton 
		        android:id="@+id/rb_all_events"
		        android:text="@string/all_events"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:button="@null"
		        android:drawableRight="@drawable/radio_btn"
		        />
		</RadioGroup>
		</LinearLayout>
		<LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal"
		    android:layout_margin="5dp"
		    android:gravity="center_vertical"
		    >
		<TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
				android:text="@string/advance"
				android:textSize="21sp"
				android:layout_marginLeft="15dp"
	    />
	    <Spinner 
	        android:id="@+id/spinner_time_before"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="20dp"
	        />
	    </LinearLayout>
	    <LinearLayout 
	        android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="10dp"
			android:padding="10dp"
	        >
	        <TextView 
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
				android:text="@string/vibration"
				android:textSize="20sp"
				android:layout_gravity="center_vertical"
	            />
	        <ImageView
	            android:id="@+id/iv_switch_vibration"
	            android:layout_width="0dp"
	            android:layout_height="27dp"
	            android:layout_gravity="left"
	            android:layout_weight="1"
	            android:src="@drawable/switch_on_yellow"
	            />
	    </LinearLayout>
	    
	    <LinearLayout 
	        android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="10dp"
			android:padding="10dp"
	        >
	        <TextView 
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
				android:text="@string/sound"
				android:textSize="20sp"
				android:layout_gravity="center_vertical"
	            />
	        <ImageView
	            android:id="@+id/iv_switch_sound"
	            android:layout_width="0dp"
	            android:layout_height="27dp"
	            android:layout_weight="1"
	            android:layout_gravity="left"
	            android:src="@drawable/switch_on_yellow"
	            />
	    </LinearLayout>
    </LinearLayout>
    	
</LinearLayout>
