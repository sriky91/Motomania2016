<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffefd5"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:id="@+id/rl_downloading"
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:visibility="gone"
        >
        <ProgressBar
            android:id="@+id/pb_downloading"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" />
        <TextView
            android:id="@+id/tv_downloading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/pb_downloading"
            android:text="@string/progressdialog_article"
            android:textSize="21sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_internet_off"
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:visibility="gone"
        >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/internet_unavaible"
            android:textSize="20sp" />

    </RelativeLayout>
    
	<GridView 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true" 
    android:id="@+id/gridview"
    android:background="#ffefd5"
    android:numColumns="1"
	>
    </GridView>
    

</LinearLayout>